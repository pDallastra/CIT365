@page "{id:int?}"
@model MegaDesk.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}
<article class="quoteTable">
    <h2>Edit</h2>

    <h4>Quote</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Quote.ID" />
                <div class="form-group">
                    <label asp-for="Quote.name" class="control-label"></label>
                    <input asp-for="Quote.name" class="form-control" />
                    <span asp-validation-for="Quote.name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.width" class="control-label"></label>
                    <input asp-for="Quote.width" class="form-control" />
                    <span asp-validation-for="Quote.width" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.depth" class="control-label"></label>
                    <input asp-for="Quote.depth" class="form-control" />
                    <span asp-validation-for="Quote.depth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.numDrawers" class="control-label"></label>
                    <input asp-for="Quote.numDrawers" class="form-control" />
                    <span asp-validation-for="Quote.numDrawers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.price" class="control-label"></label>
                    <input asp-for="Quote.price" class="form-control" />
                    <span asp-validation-for="Quote.price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.surfaceMat" class="control-label"></label>
                    <input asp-for="Quote.surfaceMat" class="form-control" />
                    <span asp-validation-for="Quote.surfaceMat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.rushOrd" class="control-label"></label>
                    <input asp-for="Quote.rushOrd" class="form-control" />
                    <span asp-validation-for="Quote.rushOrd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quote.DateAdded" class="control-label"></label>
                    <input asp-for="Quote.DateAdded" class="form-control" />
                    <span asp-validation-for="Quote.DateAdded" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</article>